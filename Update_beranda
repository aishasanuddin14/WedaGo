  <!-- =========================
       JS: Hero, Tap feedback, View & Category, Segpill A11y
       Pointer Events only (tanpa duplikasi mouse/touch)
       ========================= -->
  <script>
  (function(){
    document.addEventListener('DOMContentLoaded', () => {
      const reduce = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      setupHero(document.getElementById('wgHero'), { autoplay: !reduce, interval: 3000 });
      setupTapFeedback();

      // Default state
      homeSetCategory('kuliner');
      homeSetView('grid');

      // View toggle buttons (tanpa inline onclick)
      const vBtns = [
        {id:'home-btn-masonry', mode:'masonry'},
        {id:'home-btn-grid',    mode:'grid'},
        {id:'home-btn-list',    mode:'list'}
      ];
      vBtns.forEach(({id,mode})=>{
        const el=document.getElementById(id);
        if(el){ el.addEventListener('click',()=> homeSetView(mode)); }
      });
    });

    // ===== HERO (pointer events only) =====
    function setupHero(hero, opts){
      if(!hero) return;
      const track  = hero.querySelector('.wg-hero__track');
      const slides = Array.from(track.children);
      const total  = slides.length;
      let index = 0, dragging = false, timer = null, hidden = false;

      function update(){ track.style.transform = 'translateX(' + (-index*100) + '%)'; }
      function go(i){ index = (i + total) % total; update(); }
      function next(){ go(index + 1); }

      function start(){
        if (!opts || !opts.autoplay || hidden) return;
        stop(); timer = setInterval(() => { if (!dragging) next(); }, (opts.interval||10000));
      }
      function stop(){ if (timer) { clearInterval(timer); timer=null; } }

      document.addEventListener('visibilitychange', () => {
        hidden = document.hidden; hidden ? stop() : start();
      });

      // Pointer-based drag
      let startX=0,currX=0,locked=false,rafId=null;
      function onDown(e){
        dragging=true; locked=false;
        startX=currX=e.clientX;
        hero.classList.add('dragging');
        track.setPointerCapture && track.setPointerCapture(e.pointerId);
      }
      function onMove(e){
        if(!dragging) return;
        currX=e.clientX;
        const dx=Math.abs(currX-startX);
        if(!locked && dx>6) locked=true;
        if(locked){
          e.preventDefault();
          if(rafId==null){
            rafId=requestAnimationFrame(()=>{
              const pct=(currX-startX)/hero.clientWidth*100;
              track.style.transform='translateX(' + ((-index*100)+pct) + '%)';
              rafId=null;
            });
          }
        }
      }
      function onUp(e){
        if(!dragging) return;
        dragging=false; hero.classList.remove('dragging');
        if(rafId!=null){ cancelAnimationFrame(rafId); rafId=null; }
        if(locked){
          const dx=currX-startX, ratio=Math.abs(dx)/hero.clientWidth;
          if(ratio>0.15){ dx<0 ? next() : go(index-1); } else { update(); }
        } else { update(); }
        track.releasePointerCapture && track.releasePointerCapture(e.pointerId);
      }

      track.addEventListener('pointerdown', onDown, {passive:true});
      window.addEventListener('pointermove', onMove, {passive:false});
      window.addEventListener('pointerup',   onUp,   {passive:true});
      window.addEventListener('pointercancel', onUp, {passive:true});

      update(); start();
    }

    // ===== Tap feedback =====
    function setupTapFeedback(){
      document.querySelectorAll('.wg-menu a, .wg-wallet__action')
        .forEach(el=>{
          el.addEventListener('pointerdown', ()=> el.classList.add('is-touch'), {passive:true});
          el.addEventListener('pointerup',   ()=> el.classList.remove('is-touch'), {passive:true});
          el.addEventListener('pointercancel',()=> el.classList.remove('is-touch'), {passive:true});
          el.addEventListener('blur', ()=> el.classList.remove('is-touch'));
        });
    }

    // ===== View toggle =====
    window.homeSetView = function(mode){
      const list = document.getElementById('homeList');
      const bM = document.getElementById('home-btn-masonry');
      const bG = document.getElementById('home-btn-grid');
      const bL = document.getElementById('home-btn-list');
      if(!list) return;

      list.classList.remove('masonry','grid','list');
      [bM,bG,bL].forEach(b => b && b.setAttribute('aria-pressed','false'));

      if(mode==='grid'){ list.classList.add('grid'); bG && bG.setAttribute('aria-pressed','true'); }
      else if(mode==='list'){ list.classList.add('list'); bL && bL.setAttribute('aria-pressed','true'); }
      else { list.classList.add('masonry'); bM && bM.setAttribute('aria-pressed','true'); }
    };

    // ===== Category filter (segpill) + keyboard nav =====
    window.homeSetCategory = function(cat){
      const cards = document.querySelectorAll('#homeList .home-card');
      cards.forEach(c=>{
        c.style.display = c.classList.contains('cat-'+cat) ? '' : 'none';
      });
    };

    (function(){
      const pill = document.getElementById('segKategori');
      if(!pill) return;
      const btns = [...pill.querySelectorAll('.segpill__btn')];
      pill.style.setProperty('--seg-count', btns.length);

      function setActive(i){
        pill.style.setProperty('--seg-index', i);
        btns.forEach((b,idx)=>{
          const on = idx===i;
          b.classList.toggle('active', on);
          b.setAttribute('aria-selected', on ? 'true' : 'false');
        });
        if(typeof window.homeSetCategory === 'function'){
          window.homeSetCategory(btns[i].dataset.cat);
        }
      }

      btns.forEach((b,idx)=> b.addEventListener('click', ()=> setActive(idx)));
      pill.addEventListener('keydown', e=>{
        const i = btns.findIndex(b=>b.classList.contains('active'));
        if(e.key==='ArrowRight'){ const ni=(i+1)%btns.length; setActive(ni); btns[ni].focus(); }
        if(e.key==='ArrowLeft'){  const pi=(i-1+btns.length)%btns.length; setActive(pi); btns[pi].focus(); }
        if(e.key==='Home'){ setActive(0); btns[0].focus(); }
        if(e.key==='End'){ setActive(btns.length-1); btns[btns.length-1].focus(); }
      });

      // default: Kuliner (index 0)
      setActive(0);
    })();

  })();
    
 
(function(){
  // Tandai “home” saat pertama kali load
  if (!history.state) history.replaceState({page:'home'}, '', '#home');

  // Helper: fungsi kembali ke home UI tanpa exit
  function goHome() {
    // contoh: tampilkan kategori default, grid default, dsb.
    if (typeof window.homeSetCategory === 'function') homeSetCategory('kuliner');
    if (typeof window.homeSetView === 'function') homeSetView('grid');
    // scroll ke atas biar jelas
    window.scrollTo({top:0, behavior:'instant' in window ? 'instant' : 'auto'});
  }

  // Ketika membuka halaman dalam via link, dorong state
  document.addEventListener('click', function(e){
    const a = e.target.closest('a[href]');
    if (!a) return;
    const href = a.getAttribute('href');

    // Jalur internal app (action:// atau domain jgjk.mobi) dianggap “halaman dalam”
    const isInternal = href.startsWith('action://') || href.startsWith('https://jgjk.mobi/');
    if (isInternal) {
      // dorong state supaya ada sesuatu untuk di-pop
      history.pushState({page:'inner', href}, '', '');
      // biarkan handler native mengeksekusi aksi (atau panggil bridge kalau ada)
      // e.preventDefault(); // aktifkan jika kamu menangani navigasi sendiri via JS
    }
  }, {passive:true});

  // Intersep tombol back (History API)
  window.addEventListener('popstate', function(e){
    // Jika sedang di halaman dalam, pulangkan ke home tanpa exit
    if (e.state && e.state.page === 'inner') {
      // kembalikan ke home
      goHome();
      // dorong lagi state home supaya back berikutnya tidak langsung keluar
      history.replaceState({page:'home'}, '', '#home');
    } else {
      // Sudah di home. Cegah exit mendadak: dorong lagi state home.
      history.pushState({page:'home'}, '', '#home');
    }
  });

  // Intersep event back dari host Android (jika tersedia)
  document.addEventListener('backbutton', function(e){
    e.preventDefault();
    // simulasi popstate home-behavior
    if (history.state && history.state.page === 'inner') {
      history.back(); // akan memicu handler di atas
    } else {
      // Sudah di home: bisa tampilkan toast "Tekan lagi untuk keluar", atau abaikan
      // contoh aman: jangan keluar, tetap di home
      history.pushState({page:'home'}, '', '#home');
    }
  }, false);
})();


  </script>
</body>
</html>
